@model Usuario
@{
    ViewData["Title"] = "Detalle de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Detalle usuario</h3>
<form method="post" asp-action="AgregarDetalle">

    <!--Importante para editar-->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DetalleUsuarios.DetalleUsuario_Id" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" disabled />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="DetalleUsuarios.Cedula"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DetalleUsuarios.Cedula" class="form-control" />
                    <span asp-validation-for="DetalleUsuarios.Cedula" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="DetalleUsuarios.Deporte"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DetalleUsuarios.Deporte" class="form-control" />
                    <span asp-validation-for="DetalleUsuarios.Deporte" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="DetalleUsuarios.Mascota"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DetalleUsuarios.Mascota" class="form-control" />
                    <span asp-validation-for="DetalleUsuarios.Mascota" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Crear Detalle Usuario</button>
            &nbsp;
        </div>
    </div>
</form>

